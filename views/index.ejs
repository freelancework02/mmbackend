    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href*="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const href = this.getAttribute('href');
                const [path, hash] = href.split('#');

                if (path === '' || path === window.location.pathname.split('/').pop()) {
                    e.preventDefault();
                    const target = document.querySelector(hash);
                    if (target) {
                        target.scrollIntoView({ behavior: 'smooth' });
                    }
                }
            });
        });

        // Intersection Observer for fade-in effect on scroll
        const faders = document.querySelectorAll('.fade-in');
        const appearOptions = { threshold: 0.1 };

        const appearOnScroll = new IntersectionObserver(function (entries, observer) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('is-visible');
                    observer.unobserve(entry.target);
                }
            });
        }, appearOptions);

        faders.forEach(fader => {
            appearOnScroll.observe(fader);
        });

        // Update mobile nav active state on initial load and on scroll
        window.addEventListener('load', () => {
            const currentHash = window.location.hash || '#home';
            const currentLink = document.querySelector(`a[href='${currentHash}']`);
            if (currentLink && currentLink.closest('.mobile-nav-item')) {
                currentLink.closest('.mobile-nav-item').classList.add('active');
            }
        });

        const sections = document.querySelectorAll('section');
        const navItems = document.querySelectorAll('.mobile-nav-item');

        const observerOptions = {
            root: null,
            rootMargin: "0px",
            threshold: 0.5
        };

        const sectionObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const sectionId = entry.target.id;
                    navItems.forEach(item => {
                        item.classList.remove('active');
                        if (item.getAttribute('href') === `#${sectionId}`) {
                            item.classList.add('active');
                        }
                    });
                }
            });
        }, observerOptions);

        sections.forEach(section => {
            sectionObserver.observe(section);
        });

        // Install App Prompt
        let deferredPrompt;
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            showInstallPrompt();
        });

        function showInstallPrompt() {
            // Create a simple button or banner to prompt the user
            const installBanner = document.createElement('div');
            installBanner.id = 'install-banner';
            installBanner.className = 'fixed bottom-20 left-1/2 -translate-x-1/2 p-4 bg-white rounded-lg shadow-xl z-[100] flex items-center space-x-4 transition-all duration-300 transform scale-0 origin-bottom max-w-sm';
            installBanner.innerHTML = `
                <img src="https://minaramasjid.com/assets/image/logo/minara-masjid.png" alt="App Icon" class="w-12 h-12 rounded-lg">
                <div>
                    <p class="font-bold text-[var(--primary-dark)]">Install App</p>
                    <p class="text-sm text-gray-500">Add to home screen for a better experience!</p>
                </div>
                <button id="install-button" class="ml-auto px-4 py-2 bg-[var(--primary-dark)] text-white rounded-full text-sm font-semibold hover:bg-[var(--secondary-brown)] transition-colors duration-200">Install</button>
            `;
            document.body.appendChild(installBanner);

            // Animate the banner into view
            setTimeout(() => {
                installBanner.classList.remove('scale-0');
                installBanner.classList.add('scale-100');
            }, 500);

            document.getElementById('install-button').addEventListener('click', () => {
                installBanner.style.transform = 'scale(0)';
                if (deferredPrompt) {
                    deferredPrompt.prompt();
                    deferredPrompt.userChoice.then((choiceResult) => {
                        if (choiceResult.outcome === 'accepted') {
                            console.log('User accepted the install prompt');
                        } else {
                            console.log('User dismissed the install prompt');
                        }
                        deferredPrompt = null;
                        setTimeout(() => installBanner.remove(), 300);
                    });
                }
            });
        }
    </script>
