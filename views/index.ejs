 <!-- Question Answer Section -->
<section id="qa" class="py-16 md:py-24">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-extrabold mb-2 text-[var(--primary-dark)] fade-in fade-in-1">
        Questions & Answers
      </h2>
      <p class="text-xl text-[var(--secondary-brown)] font-light fade-in fade-in-2">
        Browse through our collection of common questions and their answers.
      </p>
    </div>

    <%
      // Accept either `questions` or `fatawas`; show latest 4
      const _listRaw = Array.isArray(questions) ? questions : (Array.isArray(fatawas) ? fatawas : []);
      const _list = _listRaw.slice(0, 4);

      const slugifyLocal = (s) => String(s || "")
        .toLowerCase()
        .trim()
        .replace(/[\u0600-\u06FF]+/g, "")
        .replace(/[^a-z0-9\s-]/g, "")
        .replace(/\s+/g, "-")
        .replace(/-+/g, "-")
        .replace(/^-+|-+$/g, "");

      const urduNums = ["۱","۲","۳","۴","۵","۶","۷","۸","۹","۱۰"];
    %>

    <!-- Equal-height, tidy grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% if (_list.length) { _list.forEach(function(q, idx){
           const qId   = q.id || q._id || q.qaId;
           const title = q.title || q.question || q.questionEnglish || q.questionUrdu || "Question";
           const desc  = q.safeText || q.summary || q.shortAnswer || q.excerpt || "";
           const views = (typeof q.views === "number" ? q.views : (q.viewCount || 0)) || 0;
           const slug  = q.slug || slugifyLocal(title);
           // Use your real detail route:
           const link  = qId ? (slug ? `/question/${qId}/${slug}` : `/question/${qId}`) : "/qa";
