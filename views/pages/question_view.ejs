  <!-- JS -->
  <script type="module">

   const mmBtn = document.getElementById('mm-btn');
        const mm = document.getElementById('mm');
        if (mmBtn && mm) {
            mmBtn.addEventListener('click', () => {
                const open = mm.classList.contains('max-h-screen');
                mm.classList.toggle('max-h-screen', !open);
                mm.classList.toggle('opacity-100', !open);
                mm.classList.toggle('max-h-0', open);
                mm.classList.toggle('opacity-0', open);
            });
        }



    document.addEventListener('DOMContentLoaded', () => {
      // Mobile menu
      const mobileMenuButton = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          const visible = mobileMenu.classList.toggle('mobile-menu-visible');
          mobileMenu.classList.toggle('mobile-menu-hidden', !visible);
          mobileMenu.setAttribute('aria-hidden', String(!visible));
        });
      }

      // Back to top
      const backToTopBtn = document.getElementById('backToTopBtn');
      if (backToTopBtn) {
        window.addEventListener('scroll', () => {
          if (window.scrollY > 300) {
            backToTopBtn.classList.remove('hidden','opacity-0');
            backToTopBtn.classList.add('flex');
          } else {
            backToTopBtn.classList.add('opacity-0');
            setTimeout(() => {
              if (window.scrollY <= 300) {
                backToTopBtn.classList.add('hidden');
                backToTopBtn.classList.remove('flex');
              }
            }, 300);
          }
        });
        backToTopBtn.addEventListener('click', () => window.scrollTo({ top:0, behavior:'smooth' }));
      }

      // ---------- Language tabs with deep-link (?lang=ur|en|ro) ----------
      const langButtons  = Array.from(document.querySelectorAll('.lang-btn'));
      const langContents = Array.from(document.querySelectorAll('.lang-content'));

      function setActiveLang(lang, push=true){
        const valid = ['ur','en','ro'];
        if (!valid.includes(lang)) lang = 'ur';

        langButtons.forEach(btn=>{
          const active = (btn.dataset.lang === lang);
          btn.classList.toggle('bg-[#c1d9a3]', active);
          btn.classList.toggle('text-[#4a7031]', active);
          btn.classList.toggle('font-semibold', active);
          btn.classList.toggle('bg-[#e8f0e0]', !active);
          btn.classList.toggle('text-gray-700', !active);
          btn.classList.toggle('font-medium', !active);
          btn.setAttribute('aria-selected', String(active));
        });

        langContents.forEach(c => c.classList.toggle('hidden', c.id !== `content-${lang}`));

        if (push){
          const url = new URL(window.location.href);
          url.searchParams.set('lang', lang);
          history.replaceState(null, '', url.toString());
        }

        // Update <meta name="description"> (for Web Share text)
        const metaDesc = document.querySelector('meta[name="description"]');
        if (metaDesc){
          const pick = (id)=> (document.querySelector(`#${id}`)?.innerText || '').trim().replace(/\s+/g,' ').slice(0,200);
          const snippet = lang === 'ur' ? pick('content-ur') : lang === 'en' ? pick('content-en') : pick('content-ro');
          if (snippet) metaDesc.setAttribute('content', snippet);
        }
      }

      const url = new URL(window.location.href);
      const initialParam = (url.searchParams.get('lang') || '').toLowerCase();
      setActiveLang(initialParam || '<%= primaryLang %>', false);
      langButtons.forEach(b => b.addEventListener('click', ()=> setActiveLang(b.dataset.lang, true)));

      // ---------- Share: Web Share API + WhatsApp fallback + Clipboard ----------
      const shareBtn = document.getElementById('shareBtn');
      const toast = document.getElementById('toast');
      if (shareBtn && toast) {
        shareBtn.addEventListener('click', async () => {
          const urlNow = new URL(window.location.href);
          const lang = urlNow.searchParams.get('lang') || '<%= primaryLang %>';
          const shareUrl = "<%= canonicalUrl %>" + (lang ? `?lang=${encodeURIComponent(lang)}` : '');
          const title = document.title;
          const descMeta = document.querySelector('meta[name="description"]');
          const text = descMeta ? descMeta.content : '';

          try {
            if (navigator.share) {
              await navigator.share({ title, text, url: shareUrl });
              return;
            }
          } catch (e) {
            // continue to WA fallback
          }

          // WhatsApp fallback (opens app/web with prefilled title + snippet + URL)
          const waText = encodeURIComponent(`${title}\n${text}\n${shareUrl}`);
          const waUrl  = `https://api.whatsapp.com/send?text=${waText}`;
          const opened = window.open(waUrl, '_blank', 'noopener,noreferrer');
          if (opened) return;

          // Clipboard fallback
          try {
            await navigator.clipboard.writeText(shareUrl);
            toast.classList.remove('opacity-0');
            setTimeout(()=>toast.classList.add('opacity-0'), 2000);
          } catch {
            const ta = document.createElement('textarea');
            ta.value = shareUrl; ta.style.position='fixed'; ta.style.left='-9999px';
            document.body.appendChild(ta); ta.focus(); ta.select();
            try { document.execCommand('copy'); } catch {}
            document.body.removeChild(ta);
            toast.classList.remove('opacity-0');
            setTimeout(()=>toast.classList.add('opacity-0'), 2000);
          }
        });
      }
    });
  </script>
