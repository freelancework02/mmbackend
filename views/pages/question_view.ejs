<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <%
    /* =========================
       SAFE SEO INPUTS & FALLBACKS
       ========================= */
    const SITE_NAME   = "Maula Ali Research Center";
    const _baseHref   = (typeof baseHref === "string" && baseHref.trim()) ? baseHref.trim() : "https://minaramasjid.com/";
    const BASE        = _baseHref.replace(/\/+$/,"");            // no trailing slash
    const q           = (question && typeof question === "object") ? question : {};
    const qId         = q.id || q._id || q.questionId || "";
    const qTitleUr    = q.titleUrdu || q.questionUrdu || "";
    const qTitleEn    = q.titleEnglish || q.questionEnglish || "";
    const qTitleRo    = q.titleRoman || q.questionRoman || q.romanUrdu || "";
    const qAnsUr      = q.answerUrdu || "";
    const qAnsEn      = q.answerEnglish || "";
    const qAnsRo      = q.answerRoman || "";
    const toText      = (s)=> String(s||"").replace(/<[^>]*>/g,"").replace(/\s+/g," ").trim();

    // Canonical: force id-only route
    const canonicalUrl= `${BASE}/question/${qId}`;

    // Language detection for previews
    const hasUr       = !!(qTitleUr || qAnsUr);
    const hasEn       = !!(qTitleEn || qAnsEn);
    const hasRo       = !!(qTitleRo || qAnsRo);
    const primaryLang = hasUr ? "ur" : (hasEn ? "en" : (hasRo ? "ro" : "en"));

    const computedTitle = qTitleUr || qTitleEn || qTitleRo || "Question Detail";

    // Prefer description from the same language first (better WA preview)
    const descUr       = toText(qAnsUr || qTitleUr);
    const descEn       = toText(qAnsEn || qTitleEn);
    const descRo       = toText(qAnsRo || qTitleRo);
    let   descCandidate= (primaryLang === "ur" && descUr) ? descUr
                      : (primaryLang === "en" && descEn) ? descEn
                      : (primaryLang === "ro" && descRo) ? descRo
                      : (descUr || descEn || descRo || "Read this detailed fatwa.");
    const metaT         = (typeof metaTitle === "string" && metaTitle.trim())
                          ? metaTitle
                          : `${computedTitle} | ${SITE_NAME}`;
    const metaD         = (typeof metaDesc === "string" && metaDesc.trim())
                          ? metaDesc
                          : descCandidate.slice(0, 200);

    // Share/OG image (ABSOLUTE URL, HTTPS)
    const fallbackOgRel = "/assets/og/fatwa-default-1200x630.png"; // put a real static image if you have one
    const fallbackOgAbs = `${BASE}${fallbackOgRel.startsWith("/")?"":"/"}${fallbackOgRel}`;
    const providedImage = (typeof metaImage === "string" && metaImage.trim()) ? metaImage.trim() : "";
    const metaI         = (/^https?:\/\//i.test(providedImage) ? providedImage
                        : providedImage ? `${BASE}${providedImage.startsWith("/")?"":"/"}${providedImage}`
                        : fallbackOgAbs);

    // Dates (optional)
    const datePublished = q.dateG || q.createdOn || null;
    const dateModified  = q.modifiedOn || q.dateG || q.createdOn || null;

    // Breadcrumbs
    const breadcrumbs = [
      { name: "Home",    url: `${BASE}/` },
      { name: "Q&A",     url: `${BASE}/qa` },
      { name: toText(computedTitle) || "Question", url: canonicalUrl }
    ];

    const askerName   = toText(q.asker || "نامعلوم");
    const muftiName   = toText(q.mufti || "");
    const madrasaName = toText(q.madrasa || "");
    const cityName    = toText(q.city || "");

    // OG locale for better WhatsApp/Facebook previews
    const ogLocale = (primaryLang === "ur") ? "ur_PK"
                   : (primaryLang === "en") ? "en_US"
                   : "en_US";
  %>

  <!-- ===== Primary SEO ===== -->
  <title><%= metaT %></title>
  <meta name="description" content="<%= metaD %>">
  <meta name="keywords" content="Maula Ali Research Centre, Islamic Questions, Fatwa, Islamic Rulings, Ask Scholars, Urdu Fatwa, Q&A, Darulifta">
  <meta name="robots" content="index,follow,max-image-preview:large">
  <link rel="canonical" href="<%= canonicalUrl %>">

  <!-- ===== Open Graph (Hardened for WhatsApp) ===== -->
  <meta property="og:site_name" content="Maula Ali Research Center">
  <meta property="og:title" content="<%= metaT %>">
  <meta property="og:description" content="<%= metaD %>">
  <meta property="og:type" content="article">
  <meta property="og:url" content="<%= canonicalUrl %>">
  <meta property="og:locale" content="<%= ogLocale %>">
  <meta property="og:image" content="<%= metaI %>">
  <meta property="og:image:secure_url" content="<%= metaI.replace(/^http:/,'https:') %>">
  <meta property="og:image:alt" content="<%= toText(computedTitle) %>">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <% if (datePublished) { %><meta property="article:published_time" content="<%= new Date(datePublished).toISOString() %>"><% } %>
  <% if (dateModified)  { %><meta property="article:modified_time"  content="<%= new Date(dateModified).toISOString() %>"><% } %>
  <meta property="article:section" content="Fatwa">

  <!-- ===== Twitter Cards ===== -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= metaT %>">
  <meta name="twitter:description" content="<%= metaD %>">
  <meta name="twitter:image" content="<%= metaI %>">

  <!-- ===== Hreflang (same canonical if single page) ===== -->
  <link rel="alternate" href="<%= canonicalUrl %>" hreflang="en">
  <link rel="alternate" href="<%= canonicalUrl %>" hreflang="ur">
  <link rel="alternate" href="<%= canonicalUrl %>" hreflang="x-default">

  <!-- ===== JSON-LD: WebSite, Organization, BreadcrumbList, QAPage ===== -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@graph": [
      {
        "@type": "WebSite",
        "@id": "<%= BASE %>#website",
        "url": "<%= BASE %>/",
        "name": "Maula Ali Research Center",
        "inLanguage": "<%= primaryLang === 'ur' ? 'ur' : 'en' %>",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "<%= BASE %>/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      },
      {
        "@type": "Organization",
        "@id": "<%= BASE %>#organization",
        "name": "Maula Ali Research Center",
        "url": "<%= BASE %>/",
        "logo": {
          "@type": "ImageObject",
          "url": "https://minaramasjid.com/assets/image/logo/marc.png"
        },
        "sameAs": []
      },
      {
        "@type": "BreadcrumbList",
        "@id": "<%= canonicalUrl %>#breadcrumbs",
        "itemListElement": [
          <% breadcrumbs.forEach(function(bc, i){ %>
          { "@type": "ListItem", "position": <%= i+1 %>, "name": "<%= bc.name %>", "item": "<%= bc.url %>" }<%= (i<breadcrumbs.length-1) ? "," : "" %>
          <% }) %>
        ]
      },
      {
        "@type": "QAPage",
        "@id": "<%= canonicalUrl %>#qapage",
        "url": "<%= canonicalUrl %>",
        "name": "<%= toText(computedTitle).replace(/\"/g,'\\\"') %>",
        "inLanguage": "<%= primaryLang === 'ur' ? 'ur' : 'en' %>",
        "mainEntity": {
          "@type": "Question",
          "name": "<%= toText(computedTitle).replace(/\"/g,'\\\"') %>",
          "text": "<%= toText(q.questionUrdu || q.questionEnglish || q.questionRoman || computedTitle).replace(/\"/g,'\\\"') %>",
          <% if (datePublished) { %>"dateCreated": "<%= new Date(datePublished).toISOString() %>",<% } %>
          <% if (askerName) { %>"author": { "@type": "Person", "name": "<%= askerName.replace(/\"/g,'\\\"') %>" },<% } %>
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "<%= toText(qAnsUr || qAnsEn || qAnsRo).replace(/\"/g,'\\\"') %>",
            <% if (dateModified) { %>"dateCreated": "<%= new Date(dateModified).toISOString() %>",<% } %>
            "author": {
              "@type": "Person",
              "name": "<%= (muftiName || 'Mufti').replace(/\"/g,'\\\"') %>"
            }
          }
        },
        "publisher": { "@id": "<%= BASE %>#organization" },
        "image": { "@type": "ImageObject", "url": "<%= metaI %>" }
      }
    ]
  }
  </script>

  <!-- Base Href -->
  <base href="<%= BASE %>/" />

  <link rel="icon" href="https://minaramasjid.com/assets/image/logo/favicon.ico" type="image/x-icon" />

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,400;8..144,500;8..144,700&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Gulzar&display=swap" rel="stylesheet" />

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

  <style>
    @font-face {
      font-family: 'NaatFont';
      src: url('https://res.cloudinary.com/awescreative/raw/upload/v1749150996/Awes/naatfont.ttf') format('truetype');
      font-weight: normal; font-style: normal; font-display: swap;
    }
    body { font-family: "Roboto Flex", sans-serif; }
    .rtl { direction: rtl; }
    .rounded-4xl { border-radius: 2rem; }
    .mobile-menu-hidden { max-height: 0; opacity: 0; transition: max-height .3s ease-out, opacity .2s ease-out; overflow: hidden; }
    .mobile-menu-visible { max-height: 500px; opacity: 1; transition: max-height .4s ease-in, opacity .3s ease-in; }
    .gulzartext, .heading, .prose-rtl { font-family: 'NaatFont','Gulzar',serif; }
    .prose { color:#333; }
    .prose p { margin-bottom: 1em; }
    .prose-rtl { direction: rtl; text-align: right; }
    .prose-ltr { direction: ltr; text-align: left; }
    @keyframes fadeInUp { from { opacity:0; transform: translateY(20px); } to { opacity:1; transform: translateY(0);} }
    .animate-fade-in-up { animation: fadeInUp .6s ease-out forwards; opacity:0; }
    .hidden { display: none; }
  </style>
</head>

