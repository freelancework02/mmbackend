<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title><%= (meta && meta.title) || "Gallery | Maula Ali Research Center" %></title>
  <meta name="keywords" content="Gallery, Maula Ali Research Centre, Islamic Events, Photos">
  <meta name="description" content="<%= (meta && meta.description) || 'View this photo gallery from Maula Ali Research Centre.' %>">
  <meta name="robots" content="index, follow">

  <meta property="og:title" content="<%= (meta && meta.title) || 'Gallery | Maula Ali Research Center' %>">
  <meta property="og:description" content="<%= (meta && meta.description) || 'View this photo gallery from Maula Ali Research Centre.' %>">
  <meta property="og:image" content="<%= (meta && meta.ogImage) || 'https://placehold.co/1200x630/6a8a4f/white?text=Gallery&font=roboto' %>">
  <meta property="og:type" content="website">

  <meta name="twitter:title" content="<%= (meta && meta.title) || 'Gallery | Maula Ali Research Center' %>">
  <meta name="twitter:description" content="<%= (meta && meta.description) || 'View this photo gallery from Maula Ali Research Centre.' %>">
  <meta name="twitter:image" content="<%= (meta && meta.ogImage) || 'https://placehold.co/1200x630/6a8a4f/white?text=Gallery&font=roboto' %>">
  <meta name="twitter:card" content="summary_large_image">

  <% if (meta && meta.baseHref) { %>
    <base href="<%= meta.baseHref %>">
  <% } %>

  <link rel="icon" href="https://minaramasjid.com/assets/image/logo/favicon.ico" type="image/x-icon">
  <script src="https://cdn.tailwindcss.com"></script>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,400;8..144,500;8..144,700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Gulzar&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" />

  <style>
    @font-face {
      font-family: 'NaatFont';
      src: url('https://res.cloudinary.com/awescreative/raw/upload/v1749150996/Awes/naatfont.ttf') format('truetype');
      font-weight: normal; font-style: normal;
    }
    body { font-family: "Roboto Flex", sans-serif; background-color: #f0f5e9; }
    .rtl { direction: rtl; }
    .mobile-menu-hidden { max-height: 0; opacity: 0; transition: max-height .3s ease-out, opacity .2s ease-out; overflow: hidden; }
    .mobile-menu-visible { max-height: 500px; opacity: 1; transition: max-height .4s ease-in, opacity .3s ease-in; }
    .gulzartext, .heading { font-family: 'NaatFont', 'Gulzar', serif; }

    .hero-card { background:#fff; border-radius:1rem; overflow:hidden; box-shadow:0 6px 20px rgba(0,0,0,.06); border:1px solid #e5e7eb; }
    .hero-cover { aspect-ratio: 16 / 9; position:relative; overflow:hidden; }
    .hero-cover img { width:100%; height:100%; object-fit:cover; }
    .badge { background:rgba(0,0,0,.6); color:#fff; padding:.25rem .5rem; font-size:.75rem; border-radius:9999px; }

    .thumb { position:relative; border-radius:.75rem; overflow:hidden; border:1px solid #e5e7eb; background:#fff; }
    .thumb img { width:100%; height:100%; object-fit:cover; display:block; }
    .thumb:hover img { transform: scale(1.02); transition: transform .2s ease; }

    .viewer-backdrop { position:fixed; inset:0; background:rgba(0,0,0,.6); display:none; align-items:center; justify-content:center; z-index:60; }
    .viewer-backdrop.show { display:flex; }
    .viewer-box { background:#fff; border-radius:1rem; max-width:90vw; width:1100px; box-shadow:0 20px 50px rgba(0,0,0,.25); overflow:hidden; }
    .viewer-header { display:flex; justify-content:space-between; align-items:center; padding:12px 16px; border-bottom:1px solid #e5e7eb; }
    .viewer-body { padding:16px; }
    .viewer-main { aspect-ratio: 16/9; display:flex; align-items:center; justify-content:center; background:#f9fafb; border-radius:.75rem; overflow:hidden; }
    .viewer-main img { width:100%; height:100%; object-contain:contain; }
    .viewer-nav { position:absolute; top:50%; transform:translateY(-50%); background:rgba(255,255,255,.85); border-radius:9999px; padding:.5rem; box-shadow:0 6px 18px rgba(0,0,0,.15); }
    .viewer-nav.left { left:10px; }
    .viewer-nav.right { right:10px; }
  </style>
</head>
<body class="bg-[#f0f5e9] text-gray-800 antialiased">
  <div class="min-h-screen z-10">
    <div class="absolute inset-0 bg-cover bg-no-repeat opacity-70" style="background-image:url('/assets/bg-DgzunbF9.png'); background-position:center; z-index:-1;"></div>

    <!-- Header -->
    <header class="bg-[#718e56] sticky top-0 z-50 shadow-md border-b border-green-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-3 relative">
          <nav class="hidden md:flex gap-5 text-md font-semibold text-white tracking-wide">
            <a href="/" class="hover:text-green-100 transition-colors">Home</a>
            <a href="/about" class="hover:text-green-100 transition-colors">About</a>
            <a href="/events" class="hover:text-green-100 transition-colors">News & Event</a>
            <a href="/gallery" class="text-white font-bold">Gallery</a>
          </nav>

          <div class="absolute left-1/2 transform -translate-x-1/2 -bottom-7 bg-white rounded-full p-1 shadow-lg border border-green-100 z-10">
            <a href="/"><img src="https://minaramasjid.com/assets/image/logo/marc.png" alt="Logo" class="w-16 h-16 rounded-full object-contain"></a>
          </div>

          <nav class="hidden md:flex gap-5 text-md font-semibold text-white tracking-wide">
            <a href="/book" class="hover:text-green-100 transition-colors">Books</a>
            <a href="/article" class="hover:text-green-100 transition-colors">Articles</a>
            <a href="/qa" class="hover:text-green-100 transition-colors">Question Answer</a>
            <!-- <a href="/request-book" class="hover:text-green-100 transition-colors">Request a Book</a> -->
            <a href="/contact" class="hover:text-green-100 transition-colors">Contact</a>
          </nav>

          <div class="md:hidden flex-1"></div>
          <!-- <div class="md:hidden flex-1 flex justify-center">
            <a href="/"><img src="https://minaramasjid.com/assets/image/logo/marc.png" alt="Logo" class="w-12 h-12 rounded-full object-contain"></a>
          </div> -->
          <div class="md:hidden flex-1 flex justify-end">
            <button id="mobile-menu-toggle" class="text-white focus:outline-none">
              <i class="fas fa-bars w-7 h-7"></i>
            </button>
          </div>
        </div>

        <div id="mobile-menu" class="md:hidden mobile-menu-hidden">
          <div class="flex flex-col gap-2 py-3 px-2 text-white bg-[#5a7544] rounded-b-xl">
            <a href="/" class="hover:bg-[#4f6639] px-4 py-2 rounded">Home</a>
            <a href="/about" class="hover:bg-[#4f6639] px-4 py-2 rounded">About</a>
            <a href="/events" class="hover:bg-[#4f6639] px-4 py-2 rounded">News & Event</a>
            <a href="/gallery" class="bg-[#4f6639] px-4 py-2 rounded" aria-current="page">Gallery</a>
            <a href="/book" class="hover:bg-[#4f6639] px-4 py-2 rounded">Books</a>
            <a href="/article" class="hover:bg-[#4f6639] px-4 py-2 rounded">Articles</a>
            <a href="/qa" class="hover:bg-[#4f6639] px-4 py-2 rounded">Question Answer</a>
            <!-- <a href="/request-book" class="hover:bg-[#4f6639] px-4 py-2 rounded">Request a Book</a> -->
            <a href="/contact" class="hover:bg-[#4f6639] px-4 py-2 rounded">Contact</a>
          </div>
        </div>
      </div>
    </header>

    <!-- Main -->
    <main class="relative z-10 pt-12 sm:pt-16">
      <section class="py-5 m-0 relative">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h1 class="heading text-3xl lg:text-4xl font-bold text-[#4a7031] mb-6 text-center gulzartext">
            <%= gallery && (gallery.title || gallery.name) || "Gallery" %>
          </h1>

          <!-- Hero / Cover -->
          <div class="hero-card mb-8">
            <div class="hero-cover">
              <% 
                const images = Array.isArray(gallery && gallery.images) ? gallery.images : [];
                const firstId = images[0] && images[0].id;
                const coverSrc = firstId ? (apiBase + "/galleries/image/" + firstId) 
                                         : "https://placehold.co/1200x675/e8f0e0/4a7031?text=Gallery+Cover&font=roboto";
              %>
              <img src="<%= coverSrc %>" alt="Cover" loading="lazy" onerror="this.onerror=null;this.src='https://placehold.co/1200x675/e8f0e0/4a7031?text=Gallery+Cover&font=roboto'">
              <div class="absolute top-3 left-3 badge flex items-center gap-1.5">
                <i class="bi bi-images"></i>
                <%= images.length %> Photos
              </div>
              <% if (gallery && gallery.eventDate) { %>
                <div class="absolute top-3 right-3 badge">
                  <i class="bi bi-calendar2-week mr-1"></i> <%= gallery.eventDate %>
                </div>
              <% } %>
            </div>

            <!-- Meta -->
            <div class="p-4 md:p-6">
              <% if (gallery && gallery.description) { %>
                <p class="text-gray-700 leading-relaxed"><%= String(gallery.description).replace(/<[^>]*>/g, " ") %></p>
              <% } %>
              <div class="mt-4 flex items-center gap-3">
                <a href="/gallery" class="inline-flex items-center gap-2 px-3 py-2 rounded-lg border hover:bg-gray-50">
                  <i class="bi bi-arrow-left"></i> Back to galleries
                </a>
                <button id="copyLinkBtn" class="inline-flex items-center gap-2 px-3 py-2 rounded-lg border hover:bg-gray-50">
                  <i class="bi bi-link-45deg"></i> Copy link
                </button>
              </div>
            </div>
          </div>

          <!-- Grid -->
          <% if (images.length) { %>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
              <% images.forEach(function(img, idx){ %>
                <button
                  class="thumb aspect-[16/10] group"
                  data-index="<%= idx %>"
                  title="<%= img.imageName || ('Image ' + (idx+1)) %>"
                >
                  <img
                    src="<%= apiBase %>/galleries/image/<%= img.id %>"
                    alt="<%= img.imageName || '' %>"
                    loading="lazy"
                    onerror="this.onerror=null;this.src='https://placehold.co/800x500/e8f0e0/4a7031?text=Photo&font=roboto'">
                  <span class="absolute bottom-2 right-2 badge"><%= (idx+1) %>/<%= images.length %></span>
                </button>
              <% }) %>
            </div>
          <% } else { %>
            <div class="bg-white rounded-xl p-8 border text-center text-gray-600">
              No photos available for this gallery.
            </div>
          <% } %>
        </div>
      </section>
    </main>
  </div>

  <!-- Footer -->
  <footer class="bg-[#718e56] text-white mt-16 sm:mt-20 relative z-20">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-8">
      <div class="flex flex-col items-center">
        <a href="/" class="flex items-center space-x-3 mb-5">
          <img class="h-12 w-auto bg-white rounded-full p-1" src="https://minaramasjid.com/assets/image/logo/marc.png" alt="Maula Ali Research Center Logo">
          <span class="text-lg font-bold text-white">Maula Ali Research Center</span>
        </a>
        <div class="flex space-x-5">
          <a href="#" class="text-green-200 hover:text-white transition-colors" aria-label="Facebook"><i class="fab fa-facebook-f fa-lg"></i></a>
          <a href="#" class="text-green-200 hover:text-white transition-colors" aria-label="Twitter"><i class="fab fa-twitter fa-lg"></i></a>
          <a href="#" class="text-green-200 hover:text-white transition-colors" aria-label="Instagram"><i class="fab fa-instagram fa-lg"></i></a>
          <a href="#" class="text-green-200 hover:text-white transition-colors" aria-label="LinkedIn"><i class="fab fa-linkedin-in fa-lg"></i></a>
        </div>
      </div>
      <div class="mt-8 pt-5 border-t border-green-400/50 text-center">
        <p class="text-sm text-green-200">
          &copy; 2024 - 2025 Design and Develop by
          <a href="https://www.AlQalamArts.com/" target="_blank" rel="noopener noreferrer" class="font-medium text-white hover:text-green-100">www.AlQalamArts.com</a>
        </p>
      </div>
    </div>
  </footer>

  <!-- Viewer Modal -->
  <div id="viewer" class="viewer-backdrop">
    <div class="viewer-box relative">
      <div class="viewer-header">
        <div class="flex items-center gap-2">
          <i class="bi bi-images text-emerald-700"></i>
          <div>
            <div class="font-semibold leading-tight"><%= gallery && (gallery.title || gallery.name) || "Gallery" %></div>
            <div class="text-xs text-gray-500"><%= (gallery && gallery.eventDate) || "" %></div>
          </div>
        </div>
        <button id="viewerClose" class="px-3 py-1 rounded-lg border hover:bg-gray-50">Close</button>
      </div>
      <div class="viewer-body">
        <div class="relative">
          <div class="viewer-main">
            <img id="viewerImg" src="" alt="">
          </div>
          <button id="viewerPrev" class="viewer-nav left" title="Previous"><i class="bi bi-chevron-left"></i></button>
          <button id="viewerNext" class="viewer-nav right" title="Next"><i class="bi bi-chevron-right"></i></button>
        </div>
        <% if (images.length > 1) { %>
          <div class="mt-3 grid grid-cols-3 sm:grid-cols-6 md:grid-cols-8 lg:grid-cols-10 gap-2">
            <% images.forEach(function(img, i){ %>
              <button class="relative aspect-square rounded-lg overflow-hidden border" data-jump="<%= i %>" title="<%= img.imageName || ('Image ' + (i+1)) %>">
                <img src="<%= apiBase %>/galleries/image/<%= img.id %>" alt="<%= img.imageName || '' %>" loading="lazy">
              </button>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
  </div>


  <!-- Footer  -->


  <!-- Mobile Bottom Navigation Bar -->
 <div id="mobile-navbar"
     class="fixed bottom-0 left-0 right-0 bg-white shadow-xl z-40 lg:hidden rounded-t-2xl border-t border-gray-200">
  <nav class="flex justify-around items-center h-16 text-gray-400">

    <!-- Home -->
    <a href="/" class="mobile-nav-item flex flex-col items-center justify-center p-2 text-sm 
        hover:text-[var(--primary-dark)] transition-colors duration-200">
      <i class="fas fa-home text-lg mobile-nav-icon"></i>
      <span class="mt-1 mobile-nav-text">Home</span>
    </a>

    <!-- Q&A (Updated from About) -->
    <a href="/qa" class="mobile-nav-item flex flex-col items-center justify-center p-2 text-sm
        hover:text-[var(--primary-dark)] transition-colors duration-200">
      <i class="fas fa-question-circle text-lg mobile-nav-icon"></i>
      <span class="mt-1 mobile-nav-text">Q&A</span>
    </a>

    <!-- Books -->
    <a href="/book" class="mobile-nav-item flex flex-col items-center justify-center p-2 text-sm
        hover:text-[var(--primary-dark)] transition-colors duration-200">
      <i class="fas fa-book text-lg mobile-nav-icon"></i>
      <span class="mt-1 mobile-nav-text">Books</span>
    </a>

    <!-- Articles -->
    <a href="/article" class="mobile-nav-item flex flex-col items-center justify-center p-2 text-sm
        hover:text-[var(--primary-dark)] transition-colors duration-200">
      <i class="fas fa-newspaper text-lg mobile-nav-icon"></i>
      <span class="mt-1 mobile-nav-text">Articles</span>
    </a>

    <!-- Gallery (Updated from Contact) -->
    <a href="/gallery" class="mobile-nav-item flex flex-col items-center justify-center p-2 text-sm
        hover:text-[var(--primary-dark)] transition-colors duration-200">
      <i class="fas fa-images text-lg mobile-nav-icon"></i>
      <span class="mt-1 mobile-nav-text">Gallery</span>
    </a>

  </nav>
</div>


  <script>
    // Mobile menu
    (function(){
      const btn = document.getElementById('mobile-menu-toggle');
      const menu = document.getElementById('mobile-menu');
      if (btn && menu) btn.addEventListener('click', () => {
        menu.classList.toggle('mobile-menu-hidden');
        menu.classList.toggle('mobile-menu-visible');
      });
    })();

    // Copy link
    (function(){
      const btn = document.getElementById('copyLinkBtn');
      if (!btn) return;
      btn.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(window.location.href);
          btn.innerHTML = '<i class="bi bi-check2-circle"></i> Copied';
          setTimeout(() => btn.innerHTML = '<i class="bi bi-link-45deg"></i> Copy link', 1500);
        } catch (e) {}
      });
    })();

    // Viewer logic
    (function(){
      const viewer = document.getElementById('viewer');
      const viewerImg = document.getElementById('viewerImg');
      const prevBtn = document.getElementById('viewerPrev');
      const nextBtn = document.getElementById('viewerNext');
      const closeBtn = document.getElementById('viewerClose');

      const thumbs = Array.prototype.slice.call(document.querySelectorAll('.thumb'));
      const jumpers = Array.prototype.slice.call(document.querySelectorAll('[data-jump]'));

      var current = 0;
      var total = <%= images.length %>;
      var apiBase = "<%= apiBase %>";
      var ids = <%- JSON.stringify(images.map(i => i.id)) %>;

      function show(i){
        if (!total) return;
        current = (i + total) % total;
        viewerImg.src = apiBase + '/galleries/image/' + ids[current];
      }

      thumbs.forEach(function(el){
        el.addEventListener('click', function(){
          var idx = parseInt(el.getAttribute('data-index'), 10) || 0;
          show(idx);
          viewer.classList.add('show');
        });
      });

      jumpers.forEach(function(el){
        el.addEventListener('click', function(){
          var idx = parseInt(el.getAttribute('data-jump'), 10) || 0;
          show(idx);
        });
      });

      if (prevBtn) prevBtn.addEventListener('click', function(){ show(current - 1); });
      if (nextBtn) nextBtn.addEventListener('click', function(){ show(current + 1); });
      if (closeBtn) closeBtn.addEventListener('click', function(){ viewer.classList.remove('show'); });

      viewer && viewer.addEventListener('click', function(e){
        if (e.target === viewer) viewer.classList.remove('show');
      });
    })();
  </script>
</body>
</html>
