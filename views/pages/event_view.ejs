            <div class="relative w-64 lg:w-72">
              <img src="<%= _img %>" alt="<%= _title %>" class="w-full rounded-xl shadow-xl border-4 border-white">
            </div>
          </div>
          <!-- Text -->
          <div class="md:w-2/3 ltr text-left">
            <h1 class="heading text-4xl lg:text-5xl font-bold text-[#4a7031] mb-4"><%= _title %></h1>

            <% if (eventItem && eventItem.summary) { %>
              <p class="text-gray-700 text-lg leading-relaxed mb-6"><%= eventItem.summary %></p>
            <% } %>

            <div class="grid grid-cols-2 gap-x-4 gap-y-6 mb-8">
              <div>
                <p class="text-sm text-gray-500 font-semibold mb-1 flex items-center">
                  <i class="fas fa-calendar-day w-5 mr-2 text-gray-400"></i>Date
                </p>
                <p class="text-lg lg:text-xl font-bold text-gray-900"><%= _date || '—' %></p>
              </div>
              <div>
                <p class="text-sm text-gray-500 font-semibold mb-1 flex items-center">
                  <i class="fas fa-clock w-5 mr-2 text-gray-400"></i>Time
                </p>
                <p class="text-lg lg:text-xl font-bold text-gray-900"><%= _time || '—' %></p>
              </div>
              <div>
                <p class="text-sm text-gray-500 font-semibold mb-1 flex items-center">
                  <i class="fas fa-map-marker-alt w-5 mr-2 text-gray-400"></i>Location
                </p>
                <p class="text-lg lg:text-xl font-bold text-gray-900"><%= _loc || '—' %></p>
              </div>
              <div>
                <p class="text-sm text-gray-500 font-semibold mb-1 flex items-center">
                  <i class="fas fa-user-tie w-5 mr-2 text-gray-400"></i>Organizer
                </p>
                <p class="text-lg lg:text-xl font-bold text-gray-900"><%= _org || '—' %></p>
              </div>
            </div>

            <div class="flex items-center gap-4">
              <a href="/events" class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#e8f0e0] text-[#4a7031] hover:bg-[#d6e5c4] transition duration-300 shadow-sm">
                <i class="fa-solid fa-arrow-left"></i>
                Back to Events
              </a>
              <button id="shareBtn" title="Share event" class="inline-flex items-center justify-center w-12 h-12 bg-[#e8f0e0] text-[#4a7031] rounded-full hover:bg-[#d6e5c4] transition duration-300 shadow-sm">
                <i class="fas fa-share-alt"></i>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Event details (rich content) -->
      <div class="bg-white p-8 md:p-12 rounded-3xl shadow-xl mb-16 animate-fade-in-up" style="animation-delay:150ms;">
        <div class="ltr text-left">
          <h2 class="heading text-3xl font-bold text-[#4a7031] mb-4">Event Details</h2>
          <div class="prose max-w-none text-gray-700 leading-relaxed text-base">
            <style>.prose p { margin-bottom: 1em; }</style>
            <%- (eventItem && eventItem.content) ? eventItem.content : '' %>
          </div>
        </div>
      </div>

      <!-- Gallery (optional stub; replace with real images if available) -->
      <div class="bg-white p-8 md:p-12 rounded-3xl shadow-xl mb-16 animate-fade-in-up" style="animation-delay:300ms;">
        <h2 class="heading text-3xl font-bold text-[#4a7031] mb-8 ltr text-left">Event Gallery</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% if (eventItem && Array.isArray(eventItem.gallery) && eventItem.gallery.length) { %>
            <% eventItem.gallery.forEach(function(gUrl){ %>
              <div class="rounded-xl overflow-hidden shadow-md">
                <img src="<%= gUrl %>" alt="Event Gallery" class="w-full h-full object-cover transition-transform duration-300 hover:scale-105">
              </div>
            <% }) %>
          <% } else { %>
            <!-- placeholders -->
            <div class="rounded-xl overflow-hidden shadow-md">
              <img src="https://placehold.co/600x400/a9bca4/ffffff?text=Gallery+Image+1" alt="" class="w-full h-full object-cover transition-transform duration-300 hover:scale-105">
            </div>
            <div class="rounded-xl overflow-hidden shadow-md">
              <img src="https://placehold.co/600x400/a9bca4/ffffff?text=Gallery+Image+2" alt="" class="w-full h-full object-cover transition-transform duration-300 hover:scale-105">
            </div>
            <div class="rounded-xl overflow-hidden shadow-md">
              <img src="https://placehold.co/600x400/a9bca4/ffffff?text=Gallery+Image+3" alt="" class="w-full h-full object-cover transition-transform duration-300 hover:scale-105">
            </div>
            <div class="rounded-xl overflow-hidden shadow-md">
              <img src="https://placehold.co/600x400/a9bca4/ffffff?text=Gallery+Image+4" alt="" class="w-full h-full object-cover transition-transform duration-300 hover:scale-105">
            </div>
            <div class="rounded-xl overflow-hidden shadow-md">
              <img src="https://placehold.co/600x400/a9bca4/ffffff?text=Gallery+Image+5" alt="" class="w-full h-full object-cover transition-transform duration-300 hover:scale-105">
            </div>
            <div class="rounded-xl overflow-hidden shadow-md">
              <img src="https://placehold.co/600x400/a9bca4/ffffff?text=Gallery+Image+6" alt="" class="w-full h-full object-cover transition-transform duration-300 hover:scale-105">
            </div>
          <% } %>
        </div>
      </div>

      <!-- Related -->
      <div class="animate-fade-in-up" style="animation-delay:450ms;">
        <div class="flex flex-col sm:flex-row justify-between items-center mb-8 gap-4">
          <h2 class="heading text-3xl font-bold text-[#4a7031] ltr text-left">Related Events</h2>
          <a href="/events" class="bg-white border border-[#4a7031] text-[#4a7031] rounded-full px-5 py-2 text-sm font-medium hover:bg-[#eaf3df] transition-colors duration-300 shadow-sm flex-shrink-0">View All Events</a>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <% if (Array.isArray(related) && related.length) { %>
            <% related.forEach(function(r){ %>
              <div class="bg-white rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
                <a href="/events/<%= r.id %>/<%= slugify(r.title || ('event-' + r.id)) %>" class="block">
                  <div class="relative h-72">
                    <img src="/api/events/image/<%= r.id %>" alt="<%= r.title || '' %>" class="absolute inset-0 w-full h-full object-cover">
                  </div>
                  <div class="p-5 ltr text-left">
                    <h3 class="heading text-[#4a7031] text-xl font-bold mb-2 line-clamp-2"><%= r.title || '' %></h3>
                    <span class="text-sm font-semibold text-green-600 hover:text-green-800 inline-flex items-center group">
                      Learn More
                      <i class="fa-solid fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
                    </span>
                  </div>
                </a>
              </div>
            <% }) %>
          <% } else { %>
            <!-- Optional: no related state -->
