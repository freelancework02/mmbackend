    <section class="relative max-w-6xl mx-auto px-4 py-12">
      <!-- Event block -->
      <div class="bg-white p-8 md:p-12 rounded-3xl mb-12 shadow-xl animate-fade-in-up">
        <div class="flex flex-col md:flex-row gap-10 lg:gap-16 items-start">
          <!-- Image -->
