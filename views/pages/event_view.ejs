<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- ===== Meta (dynamic with sensible fallbacks) ===== -->
  <title><%= typeof title !== 'undefined' ? title : 'Event Detail | Maula Ali Research Center' %></title>
  <meta name="keywords" content="<%= typeof keywords !== 'undefined' ? keywords : 'Maula Ali Research Centre, Islamic Events, Islamic Lectures, Muslim Scholars, Minara Masjid Events' %>">
  <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Get details about this event at Maula Ali Research Centre. Join us for Islamic knowledge, research, and insights from our dedicated scholars.' %>">
  <meta name="robots" content="index, follow">

  <meta property="og:title" content="<%= (typeof ogTitle !== 'undefined' && ogTitle) ? ogTitle : ((eventItem && eventItem.title) ? eventItem.title : 'Event Detail | Maula Ali Research Center') %>">
  <meta property="og:description" content="<%= (typeof ogDescription !== 'undefined' && ogDescription) ? ogDescription : (typeof description !== 'undefined' ? description : 'Get details about this event at Maula Ali Research Centre.') %>">
  <meta property="og:image" content="<%= (typeof ogImage !== 'undefined' && ogImage) ? ogImage : 'https://placehold.co/1200x630/6a8a4f/white?text=Event+Banner&font=roboto' %>">
  <meta property="og:type" content="article">

  <meta name="twitter:title" content="<%= (typeof twitterTitle !== 'undefined' && twitterTitle) ? twitterTitle : ((eventItem && eventItem.title) ? eventItem.title : 'Event Detail | Maula Ali Research Center') %>">
  <meta name="twitter:description" content="<%= (typeof twitterDescription !== 'undefined' && twitterDescription) ? twitterDescription : (typeof description !== 'undefined' ? description : 'Get details about this event at Maula Ali Research Centre.') %>">
  <meta name="twitter:image" content="<%= (typeof twitterImage !== 'undefined' && twitterImage) ? twitterImage : 'https://placehold.co/1200x630/6a8a4f/white?text=Event+Banner&font=roboto' %>">
  <meta name="twitter:card" content="summary_large_image">

  <!-- Base Href -->
  <base href="<%= typeof baseHref !== 'undefined' ? baseHref : 'https://demo.minaramasjid.com/' %>">

  <!-- Favicon -->
  <link rel="icon" href="<%= typeof faviconUrl !== 'undefined' ? faviconUrl : 'https://minaramasjid.com/assets/image/logo/favicon.ico' %>" type="image/x-icon" />

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,400;8..144,500;8..144,700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Gulzar&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"/>

  <style>
    body { font-family: "Roboto Flex", sans-serif; }
    .rtl { direction: rtl; }
    .rounded-4xl { border-radius: 2rem; }
    .mobile-menu-hidden {
      max-height: 0; opacity: 0; transition: max-height .3s ease-out, opacity .2s ease-out; overflow: hidden;
    }
    .mobile-menu-visible {
      max-height: 500px; opacity: 1; transition: max-height .4s ease-in, opacity .3s ease-in;
    }
    .gulzartext, .heading { font-family: 'Gulzar', serif; }
    @keyframes fadeInUp { from { opacity:0; transform: translateY(20px); } to { opacity:1; transform: translateY(0); } }
    .animate-fade-in-up { animation: fadeInUp .6s ease-out forwards; opacity: 0; }
    /* helper for clamping titles in related cards */
    .line-clamp-2 { display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; overflow:hidden; }
  </style>
</head>
<body class="font-sans bg-[#f0f5e9] text-gray-800 antialiased">

  <%
// ---- locals & helpers ----
const _bg = typeof bgUrl !== 'undefined' && bgUrl ? bgUrl : '/assets/bg-DgzunbF9.png';
const _title = (eventItem && eventItem.title) ? eventItem.title : '';
const _date  = (eventItem && (eventItem.date || eventItem.eventDate)) ? (eventItem.date || eventItem.eventDate) : '';
const _time  = (eventItem && (eventItem.time || eventItem.eventTime)) ? (eventItem.time || eventItem.eventTime) : '';
const _loc   = (eventItem && (eventItem.location || eventItem.venue)) ? (eventItem.location || eventItem.venue) : '';
const _org   = (eventItem && (eventItem.organizer || eventItem.organiser || eventItem.host)) ? (eventItem.organizer || eventItem.organiser || eventItem.host) : 'Maula Ali Research Center';
const _img   = (eventItem && eventItem.id) ? `/api/events/image/${eventItem.id}` : (typeof ogImage !== 'undefined' ? ogImage : 'https://placehold.co/600x800/6a8a4f/white?text=Event+Poster&font=roboto');

// server-side slugify in case one isn’t provided
const slugify = (typeof locals !== 'undefined' && typeof locals.slugify === 'function')
  ? locals.slugify
  : (t)=> String(t||'').toLowerCase().trim()
      .replace(/[\u0600-\u06FF]+/g,'')         // strip Arabic script for URL
      .replace(/\s+/g,'-')
      .replace(/[.,\/#!$%\^&\*;:{}=\_`~()؟"’’“”]/g,'')
      .replace(/-+/g,'-').replace(/^-+|-+$/g,'');
  %>

  <!-- BG overlay -->
  <div class="absolute inset-0 bg-cover bg-no-repeat opacity-70" style="background-image:url('<%= _bg %>'); background-position:center center; z-index:-1;"></div>

  <!-- Header -->
