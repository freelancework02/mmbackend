<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <meta name="description" content="<%= description %>" />
  <link rel="icon" href="<%= faviconUrl %>" type="image/x-icon" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-[#e4f0d0] relative">
  <div class="absolute inset-0 opacity-36 pointer-events-none" style="background-image: url('<%= bgUrl %>');"></div>

  <div class="max-w-4xl mx-auto p-6">
    <a href="/events" class="text-green-700 hover:underline">&larr; Back to events</a>

    <div class="bg-white rounded-2xl shadow p-6 mt-4">
      <h1 class="text-3xl font-bold text-green-800 mb-4"><%= eventItem.title || '' %></h1>
      <div class="rounded-xl overflow-hidden mb-6">
        <img src="/api/events/image/<%= eventItem.id %>" alt="<%= eventItem.title || '' %>" class="w-full h-[300px] object-cover" />
      </div>
      <div class="prose max-w-none">
        <%- (eventItem.content || '') %>
      </div>
    </div>

    <div class="mt-10">
      <h2 class="text-2xl font-bold text-green-800 mb-4">Related</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% related.forEach(function(r){ %>
          <a href="/newsandevent/<%= r.id %>/<%= slugify(r.title || ('event-' + r.id)) %>" class="block bg-white rounded-xl p-4 shadow hover:shadow-md transition">
            <div class="h-40 rounded-lg overflow-hidden mb-3">
              <img src="/api/events/image/<%= r.id %>" alt="<%= r.title || '' %>" class="w-full h-full object-cover" />
            </div>
            <div class="font-semibold text-green-800 line-clamp-2"><%= r.title || '' %></div>
          </a>
        <% }) %>
      </div>
    </div>
  </div>
</body>
</html>
