  <script type="module">

      const mmBtn = document.getElementById('mm-btn');
        const mm = document.getElementById('mm');
        if (mmBtn && mm) {
            mmBtn.addEventListener('click', () => {
                const open = mm.classList.contains('max-h-screen');
                mm.classList.toggle('max-h-screen', !open);
                mm.classList.toggle('opacity-100', !open);
                mm.classList.toggle('max-h-0', open);
                mm.classList.toggle('opacity-0', open);
            });
        }

        
    document.addEventListener('DOMContentLoaded', () => {
      // Mobile menu
      const mobileMenuButton = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          const visible = mobileMenu.classList.toggle('mobile-menu-visible');
          mobileMenu.classList.toggle('mobile-menu-hidden', !visible);
          mobileMenu.setAttribute('aria-hidden', String(!visible));
        });
      }

      // Back to top
      const backToTopBtn = document.getElementById('backToTopBtn');
      if (backToTopBtn) {
        window.addEventListener('scroll', () => {
          if (window.scrollY > 300) {
            backToTopBtn.classList.remove('hidden','opacity-0');
            backToTopBtn.classList.add('flex');
          } else {
            backToTopBtn.classList.add('opacity-0');
            setTimeout(() => {
              if (window.scrollY <= 300) {
                backToTopBtn.classList.add('hidden');
                backToTopBtn.classList.remove('flex');
              }
            }, 300);
          }
        });
        backToTopBtn.addEventListener('click', () => window.scrollTo({ top: 0, behavior: 'smooth' }));
      }

      // Share (use pretty route + WA fallback)
      const shareBtn = document.getElementById('shareBtn');
      const toast = document.getElementById('toast');
      if (shareBtn && toast) {
        shareBtn.addEventListener('click', async () => {
          const forceUrl = "<%= canonicalUrl %>";
          const title = document.title;
          const descMeta = document.querySelector('meta[name="description"]');
          const text = descMeta ? descMeta.content : '';

          try {
            if (navigator.share) {
              await navigator.share({ title, text, url: forceUrl });
              return;
            }
          } catch (e) {
            // fall through to WA
          }

          // WhatsApp fallback: prefill title + snippet + URL
          const waText = encodeURIComponent(`${title}\n${text}\n${forceUrl}`);
          const waUrl  = `https://api.whatsapp.com/send?text=${waText}`;
          const opened = window.open(waUrl, '_blank', 'noopener,noreferrer');
          if (opened) return;

          // Clipboard fallback
          try {
            await navigator.clipboard.writeText(forceUrl);
            toast.classList.remove('opacity-0');
            setTimeout(()=>toast.classList.add('opacity-0'), 2000);
          } catch {
            const ta = document.createElement('textarea');
            ta.value = forceUrl; ta.style.position='fixed'; ta.style.left='-9999px';
            document.body.appendChild(ta); ta.focus(); ta.select();
            try { document.execCommand('copy'); } catch {}
            document.body.removeChild(ta);
            toast.classList.remove('opacity-0');
            setTimeout(()=>toast.classList.add('opacity-0'), 2000);
          }
        });
      }

      // About Writer language toggle
      const aboutEl = document.getElementById('writerAbout');
      const btnUrdu = document.getElementById('btnUrdu');
      const btnEng  = document.getElementById('btnEng');

      function setAbout(mode) {
        if (!aboutEl) return;
        const urdu = (aboutEl.dataset.urdu || "").trim();
        const eng  = (aboutEl.dataset.eng  || "").trim();

        if (mode === 'urdu') {
          btnUrdu?.classList.add('active');
          btnEng?.classList.remove('active');
          aboutEl.innerHTML = urdu || "مصنف کے بارے میں مختصر تعارفی متن۔";
          aboutEl.classList.add('gulzartext','rtl','text-right');
        } else {
          btnEng?.classList.add('active');
          btnUrdu?.classList.remove('active');
          aboutEl.innerHTML = (eng || "Short bio will appear here.");
          aboutEl.classList.remove('rtl','text-right','gulzartext');
        }
      }

      if (btnUrdu && btnEng && aboutEl) {
        const hasUrdu = (aboutEl.dataset.urdu || "").trim().length > 0;
        setAbout(hasUrdu ? 'urdu' : 'eng');

        btnUrdu.addEventListener('click', (e)=>{ e.preventDefault(); setAbout('urdu'); });
        btnEng .addEventListener('click', (e)=>{ e.preventDefault(); setAbout('eng');  });
      }
    });
  </script>
