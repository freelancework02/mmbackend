<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%
    // --------- SAFE INPUTS & FALLBACKS ----------
    const siteName        = "Maula Ali Research Center";
    const defaultBase     = (typeof baseHref === "string" && baseHref.trim()) ? baseHref.trim() : "https://demo.minaramasjid.com/";
    const BASE            = defaultBase.replace(/\/+$/,"");
    const bookObj         = (typeof book === "object" && book) ? book : {};
    const writerObj       = (typeof writer === "object" && writer) ? writer : null;

    const bookId          = bookObj.id || bookObj._id || "";
    const bookTitle       = (bookObj.title || "Book");
    const bookLang        = (bookObj.language || "en");
    const bookCoverRel    = `/api/books/cover/${bookId}`;

    // Canonical/share URL uses pretty route with slug (matches route)
    const prettySlug      = (typeof slugify === "function") ? slugify(bookTitle) : encodeURIComponent(bookTitle);
    const canonicalUrl    = `${BASE}/bookdetail/${bookId}`;

    // Meta inputs (override-ready)
    const metaT           = (typeof metaTitle === "string" && metaTitle.trim()) ? metaTitle : `${bookTitle} | ${siteName}`;
    const metaD           = (typeof metaDesc  === "string" && metaDesc.trim())
                              ? metaDesc
                              : (typeof stripHTML === "function" && bookObj.description
                                    ? String(stripHTML(bookObj.description)).slice(0, 200)
                                    : "Read this Islamic book at Maula Ali Research Center.");

    // Absolute image for OG/Twitter/WhatsApp
    const providedImage   = (typeof metaImage === "string" && metaImage.trim()) ? metaImage.trim() : "";
    const metaI           = (/^https?:\/\//i.test(providedImage) ? providedImage
                           : providedImage ? `${BASE}${providedImage.startsWith("/")?"":"/"}${providedImage}`
                           : `${BASE}${bookCoverRel}`);

    // Writer fields + bilingual about
    const writerName      = (writerObj && (writerObj.name || writerObj.fullName)) || (bookObj.author || "Writer");
    const writerImg       = writerObj ? `${BASE}/api/writers/image/${writerObj.id}` : "https://placehold.co/160x160/e8f0e0/4a7031?text=Writer&font=roboto";
    const writerAboutEng  = (writerObj && writerObj.englishDescription) || "";
    const writerAboutUrdu = (writerObj && writerObj.urduDescription) || "";

    // Breadcrumbs helper
    const breadcrumbs = [
      { name: "Home",  url: `${BASE}/` },
      { name: "Books", url: `${BASE}/books` },
      { name: bookTitle, url: canonicalUrl }
    ];

    // OG locale tuned for WA preview
    const ogLocale = (String(bookLang).toLowerCase().startsWith("ur")) ? "ur_PK" : "en_US";
  %>

  <!-- Primary Meta -->
  <title><%= metaT %></title>
  <meta name="description" content="<%= metaD %>">
  <meta name="keywords" content="Maula Ali Research Centre, Islamic Books, Islamic Research, Muslim Scholars, Read Islamic Books, Urdu Books">
  <meta name="author" content="<%= writerName %>">
  <meta name="robots" content="index,follow,max-image-preview:large">
  <link rel="canonical" href="<%= canonicalUrl %>">

  <!-- Open Graph (Hardened for WhatsApp) -->
  <meta property="og:site_name" content="Maula Ali Research Center">
  <meta property="og:title" content="<%= metaT %>">
  <meta property="og:description" content="<%= metaD %>">
  <meta property="og:type" content="book">
  <meta property="og:url" content="<%= canonicalUrl %>">
  <meta property="og:locale" content="<%= ogLocale %>">
  <meta property="og:image" content="<%= metaI %>">
  <meta property="og:image:secure_url" content="<%= metaI.replace(/^http:/,'https:') %>">
  <meta property="og:image:alt" content="<%= bookTitle %>">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">

  <!-- Twitter Cards -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= metaT %>">
  <meta name="twitter:description" content="<%= metaD %>">
  <meta name="twitter:image" content="<%= metaI %>">

  <!-- Hreflang -->
  <link rel="alternate" href="<%= canonicalUrl %>" hreflang="en">
  <link rel="alternate" href="<%= canonicalUrl %>" hreflang="ur">
  <link rel="alternate" href="<%= canonicalUrl %>" hreflang="x-default">

  <!-- Base -->
  <base href="<%= BASE %>/">
  <link rel="icon" href="https://minaramasjid.com/assets/image/logo/favicon.ico" type="image/x-icon">

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,400;8..144,500;8..144,700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Gulzar&display=swap" rel="stylesheet">

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

  <!-- JSON-LD: WebSite, Organization, BreadcrumbList, Book -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@graph": [
      {
        "@type": "WebSite",
        "@id": "<%= BASE %>#website",
        "url": "<%= BASE %>/",
        "name": "Maula Ali Research Center",
        "inLanguage": "<%= ogLocale === 'ur_PK' ? 'ur' : 'en' %>",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "<%= BASE %>/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      },
      {
        "@type": "Organization",
        "@id": "<%= BASE %>#organization",
        "name": "Maula Ali Research Center",
        "url": "<%= BASE %>/",
        "logo": {
          "@type": "ImageObject",
          "url": "https://minaramasjid.com/assets/image/logo/marc.png"
        },
        "sameAs": []
      },
      {
        "@type": "BreadcrumbList",
        "@id": "<%= canonicalUrl %>#breadcrumbs",
        "itemListElement": [
          <% breadcrumbs.forEach(function(bc, i){ %>
          { "@type": "ListItem", "position": <%= i+1 %>, "name": "<%= bc.name %>", "item": "<%= bc.url %>" }<%= (i < breadcrumbs.length-1) ? ',' : '' %>
          <% }) %>
        ]
      },
      {
        "@type": "Book",
        "@id": "<%= canonicalUrl %>#book",
        "url": "<%= canonicalUrl %>",
        "name": "<%= bookTitle %>",
        "bookFormat": "https://schema.org/EBook",
        "author": {
          "@type": "Person",
          "name": "<%= writerName %>",
          "image": "<%= writerImg %>"
        },
        "inLanguage": "<%= bookLang %>",
        "image": "<%= metaI %>",
        "description": "<%= metaD %>",
        "publisher": { "@id": "<%= BASE %>#organization" },
        "isPartOf": { "@id": "<%= BASE %>#website" }
      }
    ]
  }
  </script>

