  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,400;8..144,500;8..144,700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Gulzar&display=swap" rel="stylesheet">

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

  <style>
    body { font-family: "Roboto Flex", sans-serif; }
    .rtl { direction: rtl; }
    .rounded-4xl { border-radius: 2rem; }
    .mobile-menu-hidden { max-height: 0; opacity: 0; transition: max-height .3s ease-out, opacity .2s ease-out; overflow: hidden; }
    .mobile-menu-visible { max-height: 500px; opacity: 1; transition: max-height .4s ease-in, opacity .3s ease-in; }
    .gulzartext { font-family: 'Gulzar', serif; }
    .heading { font-family: 'Gulzar', serif; }
    @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
    .animate-fade-in-up { animation: fadeInUp .6s ease-out forwards; opacity: 0; }
  </style>
</head>
<body class="font-sans bg-[#f0f5e9] text-gray-800 antialiased">
  <div class="min-h-screen z-10">
    <div class="absolute inset-0 bg-cover bg-no-repeat opacity-70" style="background-image: url('/assets/bg-DgzunbF9.png'); background-position: center center; z-index: -1;"></div>

    <!-- Header -->
    <header class="bg-[#718e56] sticky top-0 z-50 shadow-md border-b border-green-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4 relative">
          <nav class="hidden md:flex gap-6 text-md font-semibold text-white tracking-wide">
            <a href="/" class="hover:text-green-100 transition-colors">Home</a>
            <a href="/about" class="hover:text-green-100 transition-colors">About</a>
            <a href="/events" class="hover:text-green-100 transition-colors">News & Event</a>
            <a href="/book" class="text-white font-bold" aria-current="page">Books</a>
          </nav>

          <div class="absolute left-1/2 transform -translate-x-1/2 -bottom-7 bg-white rounded-full p-1 shadow-lg border border-green-100 z-10">
            <a href="/">
              <img src="https://minaramasjid.com/assets/image/logo/marc.png" alt="Logo" class="w-16 h-16 rounded-full object-contain">
            </a>
          </div>

          <nav class="hidden md:flex gap-6 text-md font-semibold text-white tracking-wide">
            <a href="/article" class="hover:text-green-100 transition-colors">Articles</a>
            <a href="/qa" class="hover:text-green-100 transition-colors">Question Answer</a>
            <a href="/book-request" class="hover:text-green-100 transition-colors">Request a Book</a>
            <a href="/contact" class="hover:text-green-100 transition-colors">Contact</a>
          </nav>

          <div class="md:hidden flex-1"></div>
          <div class="md:hidden flex-1 flex justify-center">
            <a href="/">
              <img src="https://minaramasjid.com/assets/image/logo/marc.png" alt="Logo" class="w-12 h-12 rounded-full object-contain">
            </a>
          </div>

          <div class="md:hidden flex-1 flex justify-end">
            <button id="mobile-menu-toggle" class="text-white focus:outline-none">
              <i class="fas fa-bars w-7 h-7"></i>
            </button>
          </div>
        </div>

        <div id="mobile-menu" class="md:hidden mobile-menu-hidden">
          <div class="flex flex-col gap-3 py-4 px-2 text-white bg-[#5a7544] rounded-b-xl">
            <a href="/" class="hover:bg-[#4f6639] px-4 py-2 rounded">Home</a>
            <a href="/about" class="hover:bg-[#4f6639] px-4 py-2 rounded">About</a>
            <a href="/events" class="hover:bg-[#4f6639] px-4 py-2 rounded">News & Event</a>
            <a href="/book" class="bg-[#4f6639] px-4 py-2 rounded" aria-current="page">Books</a>
            <a href="/article" class="hover:bg-[#4f6639] px-4 py-2 rounded">Articles</a>
            <a href="/qa" class="hover:bg-[#4f6639] px-4 py-2 rounded">Question Answer</a>
            <a href="/book-request" class="hover:bg-[#4f6639] px-4 py-2 rounded">Request a Book</a>
            <a href="/contact" class="hover:bg-[#4f6639] px-4 py-2 rounded">Contact</a>
          </div>
        </div>
      </div>
    </header>

    <!-- Main -->
    <main class="relative z-10 pt-16 sm:pt-20">
      <section class="relative max-w-6xl mx-auto px-4 py-12">
        <div class="bg-white p-8 md:p-12 rounded-3xl mb-12 shadow-xl animate-fade-in-up">
          <div class="flex flex-col md:flex-row gap-10 lg:gap-16 items-start">
            <div class="md:w-1/3 flex justify-center md:justify-start">
              <div class="relative w-64 lg:w-72">
                <img src="/api/books/cover/<%= book.id %>" alt="<%= book.title %>" class="w-full rounded-xl shadow-xl transform rotate-[-3deg] border-4 border-white">
              </div>
            </div>

            <div class="md:w-2/3">
              <h1 class="heading text-4xl lg:text-5xl font-bold text-[#4a7031] mb-4"><%= book.title %></h1>

              <% if (book.description) { %>
                <p class="text-gray-700 text-lg leading-relaxed gulzartext ltr text-left mb-6">
                  <%= stripHTML(book.description) %>
                </p>
              <% } %>

              <div class="grid grid-cols-2 gap-x-4 gap-y-6 mb-8">
                <div>
                  <p class="text-sm text-gray-500 font-semibold mb-1 flex items-center">
                    <i class="fas fa-user-pen w-5 mr-2 text-gray-400"></i>Writer
                  </p>
                  <p class="text-lg lg:text-xl font-bold text-gray-900"><%= book.author || "-" %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500 font-semibold mb-1 flex items-center">
                    <i class="fas fa-language w-5 mr-2 text-gray-400"></i>Translator
                  </p>
                  <p class="text-lg lg:text-xl font-bold text-gray-900"><%= book.translator || "-" %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500 font-semibold mb-1 flex items-center">
                    <i class="fas fa-eye w-5 mr-2 text-gray-400"></i>Views
                  </p>
                  <p class="text-lg lg:text-xl font-bold text-gray-900"><%= book.views != null ? book.views.toLocaleString() : "-" %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500 font-semibold mb-1 flex items-center">
                    <i class="fas fa-download w-5 mr-2 text-gray-400"></i>Downloads
                  </p>
                  <p class="text-lg lg:text-xl font-bold text-gray-900"><%= book.downloads != null ? book.downloads.toLocaleString() : "-" %></p>
                </div>
              </div>

              <div class="flex items-center gap-4">
                <a href="/api/books/attachment/<%= book.id %>" target="_blank" rel="noopener noreferrer" aria-label="Download book">
                  <button class="inline-flex items-center gap-3 bg-[#4a7031] text-white px-8 py-3 rounded-full hover:bg-[#3b5a28] transition duration-300 shadow-md font-semibold text-lg">
                    <i class="fas fa-download"></i>
                    Download
                  </button>
                </a>
                <button id="shareBtn" title="Share book" class="inline-flex items-center justify-center w-12 h-12 bg-[#e8f0e0] text-[#4a7031] rounded-full hover:bg-[#d6e5c4] transition duration-300 shadow-sm">
                  <i class="fas fa-share-alt"></i>
                </button>
              </div>
            </div>
          </div>
        </div>

        <% if (typeof writer !== "undefined" && writer) { %>
        <div class="bg-white p-8 md:p-12 rounded-3xl shadow-xl mb-16 animate-fade-in-up" style="animation-delay: 150ms;">
          <div class="flex flex-col md:flex-row items-start gap-8">
            <div class="flex-1 ltr text-left">
              <h2 class="heading text-3xl font-bold text-[#4a7031] mb-2">About Writer</h2>
              <h3 class="gulzartext text-2xl font-bold text-gray-900 mb-4"><%= book.author %></h3>
              <% if (writer.englishDescription) { %>
                <!-- Render raw HTML only if sanitized on backend -->
                <div class="text-gray-700 leading-relaxed text-base"><%- writer.englishDescription %></div>
              <% } %>
            </div>
            <div class="flex-shrink-0 md:order-first">
              <img src="/api/writers/image/<%= writer.id %>" alt="Writer" class="w-24 h-24 rounded-full border-4 border-green-100 shadow-md">
            </div>
          </div>
        </div>
        <% } %>

        <div class="animate-fade-in-up" style="animation-delay: 300ms;">
          <div class="flex flex-col sm:flex-row justify-between items-center mb-8 gap-4">
            <h2 class="heading text-3xl font-bold text-[#4a7031] ltr text-left">Writer Books Highlights</h2>
            <a href="/books" class="bg-white border border-[#4a7031] text-[#4a7031] rounded-full px-5 py-2 text-sm font-medium hover:bg-[#eaf3df] transition-colors duration-300 shadow-sm flex-shrink-0">View All Books</a>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <% if (suggestions && suggestions.length) { %>
              <% suggestions.forEach(function (b) { %>
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
                  <a href="/bookdetail/<%= b.id %>/<%= slugify(b.title || '') %>" class="block">
                    <div class="relative h-72">
                      <img src="/api/books/cover/<%= b.id %>" alt="<%= b.title %>" class="absolute inset-0 w-full h-full object-cover">
                    </div>
                    <div class="p-5">
                      <h3 class="heading text-[#4a7031] text-xl font-bold mb-2 truncate ltr text-left"><%= b.title || 'Untitled' %></h3>
                      <span class="text-sm font-semibold text-green-600 hover:text-green-800 inline-flex items-center group">
                        Read More
                        <i class="fa-solid fa-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
                      </span>
                    </div>
                  </a>
                </div>
              <% }) %>
            <% } else { %>
              <div class="col-span-full text-center text-gray-500 py-10">
                No other books from this writer yet.
              </div>
            <% } %>
          </div>
        </div>
      </section>
    </main>
  </div>

  <div id="toast" class="fixed bottom-24 right-6 bg-gray-800 text-white px-5 py-3 rounded-lg shadow-lg opacity-0 transition-opacity duration-300 z-50">
